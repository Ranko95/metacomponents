{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "noEmit": true
  },
  "include": ["types/**/*.ts", "examples/**/*", "lib/**/*", "test/**/*"]
}
